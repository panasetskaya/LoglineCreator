<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/our_green</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="postSplashScreenTheme">@style/Theme.StoryArchitectLogline</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.StoryArchitectLogline" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/our_green</item>
        <item name="colorPrimaryVariant">@color/our_background_grey</item>
        <item name="colorOnPrimary">@color/our_text_grey</item>
        <item name="colorOnSurface">@color/our_text_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/our_green</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/our_headline_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto</item>

<!--        <item name="android:windowAnimationStyle">@null</item>-->

    </style>

    <style name="MyNavButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/our_subheader_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyLinkButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/our_subheader_grey</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyTextAppearanceButton">\
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyRoundButtonsStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAppearanceButton">@style/MyTextAppearanceButton</item>
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearance</item>
    </style>

    <style name="RoundedShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <style name="MyToolbarTextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MySubHeaderTextAppearance">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/our_subheader_grey</item>
    </style>

    <style name="MyExplanationsTextAppearance">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/our_eg_grey</item>
    </style>

    <style name="MyPlainTextAppearance">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/our_text_grey</item>
    </style>

    <style name="RoundedStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_outlined</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

</resources>