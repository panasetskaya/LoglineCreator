<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.LoglineSplash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/our_green</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.StoryArchitectLogline</item>
    </style>

    <style name="Theme.StoryArchitectLogline" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/our_green</item>
        <item name="colorPrimaryVariant">@color/our_background_grey</item>
        <item name="colorOnPrimary">@color/our_text_grey</item>
        <item name="colorOnSurface">@color/our_text_grey</item>
        <item name="colorSecondary">@color/our_green</item>
        <item name="colorSecondaryVariant">@color/mode_color</item>
        <item name="colorOnSecondary">@color/our_headline_grey</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="searchViewStyle">@style/SearchViewMy</item>

    </style>

    <style name="MyNavButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/our_subheader_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyShareButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/our_purple</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyLinkButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/our_subheader_grey</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyTextAppearanceButton">\
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyRoundButtonsStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>

        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearance</item>
    </style>

    <style name="RoundedShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <style name="MyToolbarTextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MySubHeaderTextAppearance">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/our_subheader_grey</item>
    </style>

    <style name="MyExplanationsTextAppearance">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/our_eg_grey</item>
    </style>

    <style name="MyPlainTextAppearance">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/our_text_grey</item>
    </style>

    <style name="RoundedStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_outlined</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">?attr/colorSecondaryVariant</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="titleTextColor">@color/our_text_grey</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/our_hint_grey</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="SearchViewMy" parent="TextAppearance.Material3.SearchView">
        <item name="submitBackground">@android:color/transparent</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>




</resources>