        <item name="colorPrimary">@color/our_green</item>
        <item name="colorPrimaryVariant">@color/our_background_grey</item>
        <item name="colorOnPrimary">@color/our_text_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/our_purple</item>
        <item name="colorSecondaryVariant">@color/our_background_grey</item>
        <item name="colorOnSecondary">@color/our_text_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto</item>
    </style>
</resources>